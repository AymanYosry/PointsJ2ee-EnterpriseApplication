package com.ewhale.points.common.exception;

import com.ewhale.points.common.util.ExceptionConstants;

/**
 * @author Ayman Yosry
 */
public class FacadeException extends ApplicationException
{
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	/**
	 * 
	 */
	public FacadeException()
	{
		super(ExceptionConstants.FACADE_EXCETION_STATUS_CODE);
	}

	/**
	 * @param message
	 */
	public FacadeException(String message)
	{
		super(message, ExceptionConstants.FACADE_EXCETION_STATUS_CODE);
	}

	/**
	 * @param cause
	 */
	public FacadeException(Throwable cause)
	{
		super(cause, ExceptionConstants.FACADE_EXCETION_STATUS_CODE);
	}

	/**
	 * @param message
	 * @param cause
	 */
	public FacadeException(String message, Throwable cause)
	{
		super(message, cause, ExceptionConstants.FACADE_EXCETION_STATUS_CODE);
	}

	/**
	 * @param message
	 * @param cause
	 * @param enableSuppression
	 * @param writableStackTrace
	 */
	public FacadeException(String message, Throwable cause, boolean enableSuppression, boolean writableStackTrace)
	{
		super(message, cause, enableSuppression, writableStackTrace, ExceptionConstants.FACADE_EXCETION_STATUS_CODE);
	}
}