<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://java.sun.com/jsf/html" xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://xmlns.jcp.org/jsf/facelets" xmlns:p="http://primefaces.org/ui" xmlns:em="http://xmlns.jcp.org/jsf/composite/emcomp">



<ui:composition template="/resources/templates/common/layout.xhtml">
	<ui:define name="search_panel">
		<p:panelGrid  styleClass="ui-noborder" columns="6">
			<p:outputLabel for="invoiceDate_from" value="#{labels.invoiceDate_from}" />
			<p:calendar id="invoiceDate_from" value="#{agentAdminAgentInvoiceBean.invoiceDate_from}" pattern="#{entityConstantsBean.dateFormat}" />
			<p:outputLabel for="invoiceDate_to" value="#{labels.invoiceDate_to}" />
			<p:calendar id="invoiceDate_to" value="#{agentAdminAgentInvoiceBean.invoiceDate_to}" pattern="#{entityConstantsBean.dateFormat}" />
			<p:commandButton value="#{labels.search}" id="search" update="growl search_table" 
				actionListener="#{agentAdminAgentInvoiceBean.getAgentInvoices()}" />
		</p:panelGrid>
	</ui:define>
	<ui:define name="content_center">
		<em:search_component table_bean="#{agentAdminAgentInvoiceBean}"></em:search_component>
	</ui:define>

	<ui:define name="more_post_columns">
		<p:column style="width:70px;text-align: center">
			<p:outputLabel value="${tableDataRow.get(entityConstantsBean.sysInvoice.active)? labels.current:labels.issued}" />
			
		</p:column>
	</ui:define>
</ui:composition>
</html>