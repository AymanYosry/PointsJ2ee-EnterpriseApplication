	xmlns:p="http://primefaces.org/ui" xmlns:ui="http://java.sun.com/jsf/facelets">
		<ui:composition template="/resources/templates/common/layout_dialog.xhtml">
			<ui:define name="content_center">
				<h:form>
					<p:panelGrid  styleClass="ui-noborder" columns="2">
						<p:outputLabel for="paymentMethodName" value="#{labels.paymentMethodName}" />
							<p:inplace disabled="#{!paymentMethodBean.updateEnabled}" emptyLabel="#{labels.clickToEdit}">
						<p:inputText id="paymentMethodName" value="#{paymentMethodBean}" required="true" />
					</p:inplace>
					<p:commandButton value="#{labels.update}" action="#{paymentMethodBean.updatePaymentMethod()}" rendered="#{paymentMethodBean.updateEnabled}"/>
					</p:panelGrid>
				</h:form>
			</ui:define>
		</ui:composition>
